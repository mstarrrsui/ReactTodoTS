{
  "compilerOptions": {
    "target": "es2015",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "outDir": "outputjs",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "app/custom_typings"],
    "lib": ["dom", "es6"]
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules"]
}
